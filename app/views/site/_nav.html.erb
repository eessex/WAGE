    <% else %>

      <div class="nav navbar-right">
        <% if current_page?(new_user_session_path) %>
          <a href='/#register' class='btn'>Register</a>
        <% else %>
          <%= link_to "Log In", new_user_session_path, :class => 'btn'  %>
          <a href='/#register' class='btn'>Register</a>
        <% end %>
      </div>
    <% end %>
</nav>
