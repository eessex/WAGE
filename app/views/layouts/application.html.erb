<!DOCTYPE html>
<html>
<head>
  <title>W.A.G.E : APPLY</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <%= render '/site/nav' %>
    <main>
      <% if notice %>
        <p class="notice"><%= notice %></p>
        <!-- <div class="notices">* <span><%= notice %></span><span><%= alert %></span></div> -->
      <% elsif alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
